<h1>Edit Contact</h1>
<%= form_tag '/contacts', method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %> @contact.first_name
  </div>
  <div>
    <%= label_tag :last_name %> 
    <%= text_field_tag :last_name %> @contact.last_name
  </div> 
  <div>
    <%= label_tag :occupation %>
    <%= text_field_tag :occupation %> @contact.occupation
  </div>
  <div>
    <%= label_tag :fav_food %>
    <%= text_field_tag :fav_food %> @contact.fav_food
  </div>
  
  
  <div>
    <%= submit_tag "Edit Contact" %>
  </div>
<% end %>