<h1>Edit Contact</h1>
<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div class="form-group">
   
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name, class: "form-control" %>
  </div>

    <div class="form-group">
    
    <%= label_tag :last_name %> 
    <%= text_field_tag :last_name, @contact.last_name, class: "form-control" %>
  </div> 
  
  <div class="form-group">

    <%= label_tag :occupation %>
    <%= text_field_tag :occupation, @contact.occupation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :fav_food %>
    <%= text_field_tag :fav_food, @contact.fav_food, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= label_tag :address %>
    <%= text_field_tag :address, @contact.address, class: "form-control" %>
  </div>

    <div>
    <%= submit_tag "Edit Contact", class: "btn btn-default" %>
  </div>
<% end %>